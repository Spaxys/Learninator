@model Learninator.ViewModels.TagsVM
@{
    ViewData["Title"] = "SearchTag";
}

<h1>SearchTag</h1>
@Html.ActionLink("Back", "Index", "Test")

<form method="post" onsubmit="Tag.saveTags(@ViewBag.LinkId )">

    <div class="tag-main">
        <span id="tagSet" class="tagset"></span><input style="display:inline" autocomplete="off" type="text" id="tagInput" /><br/>
    </div>
    <span id="tagName">[TagName]</span>
    <h2 id="tagId">-2</h2>
<a id="btnDeleteLastTag"class="btn btn-default" style="background-color:lightcoral">Delete last tag</a>
    <input type="submit" value="Create" class="btn btn-default" />
</form>

@section scripts
{
    <script src="~/js/Tag.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            var tagger = new Tag.Tag("tagInput", "tagName", "tagSet", "tagId", "btnDeleteLastTag"); 
        });

    </script>
}
