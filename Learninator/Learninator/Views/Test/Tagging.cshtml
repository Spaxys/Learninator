@model Learninator.ViewModels.TaggingVM
@{
    ViewData["Title"] = "Tagging";
}

<h1>Tagging</h1>

<form method="post">
    <label asp-for="Name" class="control-label" />
    <input asp-for="Name" type="text" id="tagInput" class="form-control" />
    <h2 id="tagId">-2</h2>
    <h2 id="tagName">[TagName]</h2>
    <input type="submit" value="Create" class="btn btn-default" />
</form>

@section scripts
{
<script src="~/js/Tag.js?v=1_10"></script>
<script>
   $(document).ready(async function () {
        var inputTag = $("#tagInput");
        var idTag = $("#tagId");
        var nameTag = $("#tagName");
       inputTag.on("change keyup", x => {

            Tag.getByName(inputTag.val(), function (result) {
                idTag.html(result.id);
                nameTag.html(result.name);
            });

        }) 
    })

</script>
}
